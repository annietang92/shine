<div class="row">
<div class="col-lg-3"></div>
<div class="col-lg-6">
	<div class="row text-center">
		<h1>Leave us a message</h1>
	</div>
	<div class="lg-space"></div>
	<div class="line dashed-line"></div>
	<div class="lg-space"></div>

<%= form_for @message do |f| %>
	<% if @message.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-error">
            The form contains <%= pluralize(@message.errors.count, "error") %>.
          </div>
          <ul>
          <% @message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
	
	<div class="col-lg-12">
		<%= f.label :name, class: 'small-text control-label'%>
		<%= f.text_field :name, class: 'large-text form-control' %>
	</div>
	<div class="col-lg-12">
		<%= f.label :email, class: 'small-text control-label'%>
		<%= f.text_field :email, class: 'large-text form-control' %>
	</div>
	<div class="col-lg-12">
		<%= f.label :subject, class: 'small-text control-label'%>
		<%= f.text_field :subject, class: 'large-text form-control' %>
	</div>
	<div class="col-lg-12">
		<%= f.label :message, class: 'small-text control-label'%>
		<%= f.text_area :message, placeholder: 'optional',class: 'large-text form-control' %><br><br>

		<%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
	</div>
	</div>
<%end%>
</div>
</div>
<div class="lg-space"></div>
<div class="lg-space"></div>
<div class="lg-space"></div>