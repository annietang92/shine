<div id="donate">
	<%=link_to "Click to Donate!", new_donation_path, class: 'btn btn-primary strong'%>

</div>

<div class="navbar navbar-fixed-top" data-activeslide="1">
	<div class="container">

		<div class="nav-collapse collapse navbar-responsive-collapse">
			<%=render 'static/navigation'%>
		</div>
	</div>
</div>

<!--  MAIN Background  -->
<div class="slide story" id="slide-1" data-slide="1">
	<div class="container">
		<div id="home-row-1" class="row clearfix">
			<% flash.each do |key, value| %>
				 <div class="alert alert-<%= key %>">
				 	<%= value %></div>
			<% end %>
			<%=render 'static/main_panel'%>
		</div>
	</div>
</div>

<!--  Slide 2 - About  -->
<div class="slide story" id="slide-2" data-slide="2">
	<div class="container">
		<div id="about" class="toggle animated fadeIn">
			<%=render 'static/about_panel'%>
		</div>
		<div id="program" class="toggle hide animated fadeIn">
			<%=render 'static/program'%>
		</div>
		<div id = "deadlines" class="toggle hide animated fadeIn">
			<%=render 'static/deadlines'%>
		</div>
		<div id = "success" class="toggle hide animated fadeIn">
			<%=render 'static/success'%>
		</div>
		<%= render 'static/about_links' %>
	</div>
</div>

<!--  Slide 3 - News  -->
<div class="slide story" id="slide-3" data-slide="3">
	<div class="container">
		<%=render 'static/news_panel'%>
	</div>
</div>


<!--  Slide 4 - Application  -->
<div class="slide story" id="slide-4" data-slide="4">
	<div class="container">
		<%=render 'static/application_panel'%>
	</div>
</div>

<!--  Slide 5 - Mentors  -->
<div class="slide story" id="slide-5" data-slide="5">
	<div class="container">
		<%=render 'static/mentors_panel'%>
	</div>
</div>

<!--  Slide 6 - Contact  -->
<div class="slide story" id="slide-6" data-slide="6">
	<div class="container">
		<%=render 'static/contact_panel'%>
		<div class="lg-space"></div>
		<div class="lg-space"></div>
		<div class="lg-space"></div>
		<%=render 'static/sponsors'%>
	</div>
</div>
