<div class="row">
<div class="col-lg-3"></div>
<div class="col-lg-6">
	<div class="row text-center">
		<h1>Donation from <%=@donation.name%></h1>
	</div>
	<div class="lg-space"></div>
	<div class="line dashed-line"></div>
	<div class="lg-space"></div>

<%= form_for @donation do |f| %>
	<% if @donation.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-error">
            The form contains <%= pluralize(@donation.errors.count, "error") %>.
          </div>
          <ul>
          <% @donation.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
	
	<div class="col-lg-12">
		<%= f.label :name, class: 'small-text control-label'%>
		<%= f.text_field :name, :readonly => true,class: 'large-text form-control' %>
	</div>
	<div class="col-lg-12">
		<%= f.label :email, class: 'small-text control-label'%>
		<%= f.text_field :email, :readonly => true,class: 'large-text form-control' %>
	</div>
	<div class="col-lg-6">
		<%= f.label :donation, "Select donation amount", class: 'small-text control-label'%>
		<%= f.text_field :donation, :readonly => true,class: 'large-text form-control' %>
	</div>
	<div class="col-lg-12">
		<%= f.label :message, class: 'small-text control-label'%>
		<%= f.text_area :message, :readonly => true,class: 'large-text form-control' %><br><br>
	</div>
	</div>
<%end%>
</div>
</div>
<div class="lg-space"></div>
<div class="lg-space"></div>
<div class="lg-space"></div>