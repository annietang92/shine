<div class="row">
	<div class="lg-space"></div>
	<div class="col-lg-2"></div>
	<div class="col-lg-8">
		<div class="row text-center">
		<h1>Donations</h1>
		<div class="lg-space"></div>
		<div class="line dashed-line"></div>
		<div class="lg-space"></div>
		</div>
		<table>
			<thead>
			<tr>
				<th>Date</th>
				<th>Name</th>
				<th>Email</th>
				<th>Donation</th>
				<th>Message</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @donations.each do |msg| %>
			<tr class="<%= cycle('oddrow', 'evenrow') %>">
				<td><%= msg.created_at.strftime("%m/%d/%Y")%></td>
				<td><%= msg.name %></td>
				<td><%= msg.email %></td>
				<td><%= msg.donation %></td>
				<td><%= truncate(msg.message, length: 40) %></td>
				<td><%= link_to 'View', msg, class: "font-black" %></td>
				<td><%= link_to 'Delete', msg, method: :delete, data: { confirm: 'Are you sure you want to delete this message?' }, remote: true, class: "font-black"%></td>
				<td>
			</tr>
			<% end %>
		</tbody>
		</table>
	</div>
</div>