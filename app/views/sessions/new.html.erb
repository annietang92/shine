<div class="row">
<div class="col-lg-3"></div>
<div class="col-lg-6">
	<div class="row text-center">
		<h1>Sign In</h1>
	</div>
	<div class="lg-space"></div>
	<div class="line dashed-line"></div>
	<div class="lg-space"></div>
	<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
<%= form_for(:session, url: sessions_path) do |f| %>
	<div class="col-lg-12">
		<%= f.label :email, class: 'small-text control-label'%>
		<%= f.text_field :email, class: 'large-text form-control' %>
	</div>
	<div class="col-lg-12">
		<%= f.label :password, class: 'small-text control-label'%>
		<%= f.password_field :password, class: 'large-text form-control' %><br><br>
		<%= f.submit "Sign In", class: "btn btn-lg btn-primary" %> 
	</div>
	</div>
	</div>
<%end%>
</div>
</div>
<div class="lg-space"></div>
<div class="lg-space"></div>
<div class="lg-space"></div>